<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
tools:context=".ui.main.MainActivity">

    <com.huatec.hiot_cloud.widget.NoSlideViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/rg_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingVertical="5dp">
            <RadioButton
                android:id="@+id/rg_message"
                style="@style/mainRadioButtonStyle"
                android:drawableTop="@drawable/main_label_message"
                android:text="消息" />
            <RadioButton
                android:id="@+id/rg_equipment"
                style="@style/mainRadioButtonStyle"
                android:drawableTop="@drawable/main_label_equipment"
                android:text="设备"/>
            <RadioButton
                android:id="@+id/rg_scene"
                style="@style/mainRadioButtonStyle"
                android:drawableTop="@drawable/main_label_scene"
                android:text="场景"/>
            <RadioButton
                android:id="@+id/rg_mine"
                style="@style/mainRadioButtonStyle"
                android:drawableTop="@drawable/main_label_mine"
                android:text="我的"/>
        </RadioGroup>
    </LinearLayout>

</LinearLayout>